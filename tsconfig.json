{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "forceConsistentCasingInFileNames": true,
        // TODO: turn this on eventually
        "strictNullChecks": false,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./types"
    },
    "include": ["./System"]
}
